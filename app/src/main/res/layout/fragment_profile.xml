<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ProfileFragment">

    <TextView
        android:id="@+id/profile_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:padding="10sp"
        android:gravity="center"
        android:fontFamily="@font/ubuntu_bold_font"
        android:textSize="30sp"
        />
    <LinearLayout
        android:id="@+id/profile_head2"
        android:layout_below="@+id/profile_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:gravity="end"
            android:paddingEnd="20sp"
            android:fontFamily="@font/ubuntu_bold_font"
            android:textSize="20sp"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/profile_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:fontFamily="@font/ubuntu_font"
            android:textColor="#3480FF"
            android:textSize="20sp"
            android:layout_weight="1"
            />

    </LinearLayout>
    <Button
        android:id="@+id/profile_signout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN OUT"
        android:textSize="25sp"
        android:padding="10sp"
        android:fontFamily="@font/ubuntu_bold_font"
        android:layout_below="@+id/profile_head2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15sp"
        android:background="@drawable/curved_button"
        android:textColor="#ff0000"
        />
    <TextView
        android:id="@+id/profile_head3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Movies You Have Rated"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/profile_signout"
        android:layout_marginTop="15sp"
        android:fontFamily="@font/ubuntu_bold_font"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/profile_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_head3"
        android:layout_margin="10sp"
        />

</RelativeLayout>