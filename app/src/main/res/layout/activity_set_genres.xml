<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetGenres"
    >
    <TextView
        android:id="@+id/setgenres_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Your Favourite Genres"
        android:textSize="25sp"
        android:gravity="center"
        android:fontFamily="@font/ubuntu_bold_font"
        android:layout_marginBottom="10dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setgenres_head"
        android:layout_above="@+id/setgenres_submit"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        >
        <ListView
            android:id="@+id/setgenres_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/setgenres_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textSize="30sp"
        android:text="Submit"
        android:onClick="registerMovies"
        android:fontFamily="@font/ubuntu_bold_font"
        android:background="@drawable/gradient"
        android:textColor="#ff3b3b"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>